<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.wiztech.taxation_app.ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:theme="@style/Theme.TaxationApp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_header"
            app:popupTheme="@style/Theme.TaxationApp.PopupOverlay">
            <ImageView
                android:id="@+id/siteDrawerMenuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_icon"
                android:layout_gravity="left|top"
                android:layout_marginRight="15dp"
                android:onClick="openCloseNavigationDrawer"
                />

            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:src="@drawable/user_dummy"
                android:layout_gravity="right|top"
                android:layout_marginRight="15dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_dummy"
                android:layout_gravity="right|top"
                android:layout_marginRight="15dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/appColor"/>



            <ImageView
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:src="@mipmap/dashboard_title"
                android:layout_gravity="center|bottom"
                />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/ivLeft"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-130dp"
        android:src="@drawable/login_left_corner" />
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="-20dp"
        android:visibility="gone"
        android:background="@color/appColor">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Ali Raza"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"

            android:text="Acc No: 0021"
            android:textColor="@android:color/white" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="10dp"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:background="@drawable/circle_drawable_home"
            tools:listitem="@layout/home_group_item"></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_for_home_dues"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCurrency"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_currency" />

            <TextView
                android:id="@+id/tvDues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCurrency"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="Dues"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/tvTotalDues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDues"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/appColor"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>








</LinearLayout>